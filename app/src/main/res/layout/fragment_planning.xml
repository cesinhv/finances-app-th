                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvPlEducationSpent"
                        app:layout_constraintStart_toEndOf="@+id/ivPlEducation"
                        app:layout_constraintTop_toTopOf="@+id/ivPlEducation" />

                    <TextView
