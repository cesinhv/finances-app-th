                    <TextView
                        android:id="@+id/tvPlMarket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/market_label"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvPlMarketSpent"
                        app:layout_constraintStart_toEndOf="@+id/ivPlMarket"
                        app:layout_constraintTop_toTopOf="@+id/ivPlMarket" />

                    <TextView
                        android:id="@+id/tvPlMarketSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="R$ 107,23"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlMarket"
                        app:layout_constraintStart_toEndOf="@+id/ivPlMarket"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlMarket" />

                    <TextView
                        android:id="@+id/tvPlMarketTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="/ R$ 400,00"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPlMarketSpent"
                        app:layout_constraintStart_toEndOf="@+id/tvPlMarketSpent" />

                    <ImageView
                        android:id="@+id/ivPlMarketEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlMarket"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ivPlMarket"
                        android:contentDescription="@string/edit" />

                    <ProgressBar
                        android:id="@+id/pbPlMarket"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="27"
                        android:progressTint="@color/amber_600"
                        android:progressTintMode="src_in"
                        android:scaleY="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivPlMarket" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@color/amber_100"
                android:backgroundTint="@color/amber_100"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivPlHealth"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_health"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvPlHealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/health_label"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvPlHealthSpent"
                        app:layout_constraintStart_toEndOf="@+id/ivPlHealth"
                        app:layout_constraintTop_toTopOf="@+id/ivPlHealth" />

                    <TextView
                        android:id="@+id/tvPlHealthSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="R$ 83,50"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlHealth"
                        app:layout_constraintStart_toEndOf="@+id/ivPlHealth"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlHealth" />

                    <TextView
                        android:id="@+id/tvPlHealthTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="/ R$ 200,00"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPlHealthSpent"
                        app:layout_constraintStart_toEndOf="@+id/tvPlHealthSpent" />

                    <ImageView
                        android:id="@+id/ivPlHealthEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlHealth"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ivPlHealth"
                        android:contentDescription="@string/edit" />

                    <ProgressBar
                        android:id="@+id/pbPlHealth"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="42"
                        android:progressTint="@color/amber_600"
                        android:progressTintMode="src_in"
                        android:scaleY="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivPlHealth" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@color/amber_100"
                android:backgroundTint="@color/amber_100"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivPlTransport"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_transport"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvPlTransport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/transport_label"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvPlTransportSpent"
                        app:layout_constraintStart_toEndOf="@+id/ivPlTransport"
                        app:layout_constraintTop_toTopOf="@+id/ivPlTransport" />

                    <TextView
                        android:id="@+id/tvPlTransportSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="R$ 67,38"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlTransport"
                        app:layout_constraintStart_toEndOf="@+id/ivPlTransport"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlTransport" />

                    <TextView
                        android:id="@+id/tvPlTransportTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="/ R$ 200,00"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPlTransportSpent"
                        app:layout_constraintStart_toEndOf="@+id/tvPlTransportSpent" />

                    <ImageView
                        android:id="@+id/ivPlTransportEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlTransport"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ivPlTransport"
                        android:contentDescription="@string/edit" />

                    <ProgressBar
                        android:id="@+id/pbPlTransport"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="34"
                        android:progressTint="@color/amber_600"
                        android:progressTintMode="src_in"
                        android:scaleY="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivPlTransport" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:background="@color/amber_100"
                android:backgroundTint="@color/amber_100"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivPlOther"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_other"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvPlOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/other_label"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvPlOtherSpent"
                        app:layout_constraintStart_toEndOf="@+id/ivPlOther"
                        app:layout_constraintTop_toTopOf="@+id/ivPlOther" />

                    <TextView
                        android:id="@+id/tvPlOtherSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="R$ 0,00"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlOther"
                        app:layout_constraintStart_toEndOf="@+id/ivPlOther"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlOther" />

                    <TextView
                        android:id="@+id/tvPlOtherTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
