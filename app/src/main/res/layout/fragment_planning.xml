<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amber_50"
    android:backgroundTint="@color/amber_50"
    tools:context=".fragments.PlanningFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/planning_menu"/>

            <TextView
                android:id="@+id/tvPlMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Maio"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

            <ImageView
                android:id="@+id/ivPlLeftArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginEnd="64dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlMonth"
                app:layout_constraintEnd_toStartOf="@+id/tvPlMonth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPlMonth"
                android:contentDescription="@string/previous_month" />

            <ImageView
                android:id="@+id/ivPlRightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="95dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlMonth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPlMonth"
                app:layout_constraintTop_toTopOf="@+id/tvPlMonth"
                android:contentDescription="@string/next_month" />

            <ImageView
                android:id="@+id/ivPiggybank"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_piggybank"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPlMonth"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvPlBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="3dp"
                android:text="@string/remaining_budget"
                app:layout_constraintBottom_toTopOf="@+id/tvBudgetDisplay"
                app:layout_constraintStart_toEndOf="@+id/ivPiggybank"
                app:layout_constraintTop_toTopOf="@+id/ivPiggybank" />

            <TextView
                android:id="@+id/tvBudgetDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="R$ 2.087,09"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivPiggybank"
                app:layout_constraintStart_toEndOf="@+id/ivPiggybank"
                app:layout_constraintTop_toBottomOf="@+id/tvPlBudget" />

            <TextView
                android:id="@+id/tvTotalBudgetDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="/ 3.000,00"
                android:textColor="@color/gray_700"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvBudgetDisplay"
                app:layout_constraintStart_toEndOf="@+id/tvBudgetDisplay"
                app:layout_constraintTop_toTopOf="@+id/tvBudgetDisplay" />

            <ImageView
                android:id="@+id/ivPlHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_baseline_visibility_off_24"
                app:layout_constraintBottom_toBottomOf="@+id/ivPiggybank"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivPiggybank"
                android:contentDescription="@string/hide_numbers" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:background="@color/amber_100"
                android:backgroundTint="@color/amber_100"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPiggybank">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivPlFood"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_food"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvPlFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/food_label"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvPlFoodSpent"
                        app:layout_constraintStart_toEndOf="@+id/ivPlFood"
                        app:layout_constraintTop_toTopOf="@+id/ivPlFood" />

                    <TextView
                        android:id="@+id/tvPlFoodSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="R$ 19,99"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlFood"
                        app:layout_constraintStart_toEndOf="@+id/ivPlFood"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlFood" />

                    <TextView
                        android:id="@+id/tvPlFoodTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="/ R$ 250,00"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPlFoodSpent"
                        app:layout_constraintStart_toEndOf="@+id/tvPlFoodSpent" />

                    <ImageView
                        android:id="@+id/ivPlFoodEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPlFood"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ivPlFood"
                        android:contentDescription="@string/edit" />

                    <ProgressBar
                        android:id="@+id/pbFood"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="8"
                        android:progressTint="@color/amber_600"
                        android:progressTintMode="src_in"
                        android:scaleY="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivPlFood" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@color/amber_100"
                android:backgroundTint="@color/amber_100"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
